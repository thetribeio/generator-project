{
    "extends": [
        ":separateMajorReleases",
        ":combinePatchMinorReleases",
        ":ignoreUnstable",
        ":prImmediately",
        ":semanticCommitsDisabled",
        ":updateNotScheduled",
        ":automergeDisabled",
        ":ignoreModulesAndTests",
        ":prHourlyLimit2",
        ":prConcurrentLimit20",
        "group:monorepos",
        "helpers:disableTypesNodeMajor"
    ],
    "enabledManagers": ["composer", "git-submodules", "npm"],
    "rangeStrategy": "bump",
    "rebaseWhen": "never",
    "packageRules": [
        {
            "datasources": ["packagist"],
            "packageNames": [
                "symfony/asset",
                "symfony/amazon-mailer",
                "symfony/browser-kit",
                "symfony/cache",
                "symfony/config",
                "symfony/console",
                "symfony/css-selector",
                "symfony/dependency-injection",
                "symfony/debug-bundle",
                "symfony/doctrine-bridge",
                "symfony/dom-crawler",
                "symfony/dotenv",
                "symfony/error-handler",
                "symfony/event-dispatcher",
                "symfony/expression-language",
                "symfony/filesystem",
                "symfony/finder",
                "symfony/form",
                "symfony/framework-bundle",
                "symfony/google-mailer",
                "symfony/http-client",
                "symfony/http-foundation",
                "symfony/http-kernel",
                "symfony/inflector",
                "symfony/intl",
                "symfony/ldap",
                "symfony/lock",
                "symfony/mailchimp-mailer",
                "symfony/mailer",
                "symfony/mailgun-mailer",
                "symfony/messenger",
                "symfony/mime",
                "symfony/monolog-bridge",
                "symfony/notifier",
                "symfony/options-resolver",
                "symfony/postmark-mailer",
                "symfony/process",
                "symfony/property-access",
                "symfony/property-info",
                "symfony/proxy-manager-bridge",
                "symfony/rate-limiter",
                "symfony/routing",
                "symfony/security-bundle",
                "symfony/security-core",
                "symfony/security-csrf",
                "symfony/security-guard",
                "symfony/security-http",
                "symfony/semaphore",
                "symfony/sendgrid-mailer",
                "symfony/serializer",
                "symfony/stopwatch",
                "symfony/string",
                "symfony/templating",
                "symfony/translation",
                "symfony/twig-bridge",
                "symfony/twig-bundle",
                "symfony/uid",
                "symfony/validator",
                "symfony/var-dumper",
                "symfony/var-exporter",
                "symfony/web-link",
                "symfony/web-profiler-bundle",
                "symfony/workflow",
                "symfony/yaml"
            ],
            "groupName": "symfony monorepo"
        }
    ]
}

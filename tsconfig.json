
{
    "extends": "@tsconfig/node14/tsconfig.json",
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "importHelpers": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "rootDir": ".",
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "types/*"
            ]
        }
    },
    "include": [
        "generators/**/*"
    ],
    "exclude": [
        "generators/*/templates",
        "**/__tests__"
    ]
}

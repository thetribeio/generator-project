{
  "name": "@thetribe/generator-project",
  "version": "0.3.0",
  "keywords": [
    "yeoman-generator"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=14"
  },
  "dependencies": {
    "binascii": "^0.0.2",
    "crypto-random-string": "^3.3.1",
    "ejs": "^3.1.6",
    "ramda": "^0.27.1",
    "tslib": "^2.3.1",
    "yaml": "^1.10.2",
    "yeoman-generator": "^5.4.2"
  },
  "devDependencies": {
    "@thetribe/eslint-config-typescript": "^0.3.1",
    "@tsconfig/node14": "^1.0.1",
    "@types/jest": "^27.0.2",
    "@types/ramda": "^0.27.47",
    "@types/yeoman-generator": "^5.2.7",
    "@types/yeoman-test": "^4.0.3",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.2.0",
    "eslint-plugin-import": "^2.25.3",
    "execa": "^5.1.1",
    "jest": "^27.3.1",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.4",
    "yeoman-environment": "^3.2.0",
    "yeoman-test": "^5.1.0"
  },
  "scripts": {
    "build": "rm -fr dist && tsc --project tsconfig.build.json && copyfiles --all --exclude '**/node_modules/**' --exclude '**/vendor/**' 'generators/*/templates/**/*' 'generators/utils/*/templates/**/*' dist && cp package.json README.md dist/",
    "lint": "eslint --ext ts generators utils",
    "test": "yarn test:utils && yarn test:generators",
    "test:generators": "jest --runInBand --testTimeout 300000 generators",
    "test:utils": "jest utils",
    "test:utils:coverage": "yarn test:utils --coverage --collectCoverageFrom 'utils/**/*'"
  }
}

{
  "name": "@thetribe/generator-project",
  "version": "0.2.0",
  "license": "MIT",
  "engines": {
    "node": ">=14"
  },
  "dependencies": {
    "binascii": "^0.0.2",
    "crypto-random-string": "^3.3.1",
    "ejs": "^3.1.6",
    "ramda": "^0.27.1",
    "tslib": "^2.2.0",
    "yaml": "^1.10.2",
    "yeoman-generator": "^5.2.0"
  },
  "devDependencies": {
    "@thetribe/eslint-config-typescript": "^0.3.0",
    "@tsconfig/node14": "^1.0.0",
    "@types/jest": "^26.0.23",
    "@types/ramda": "^0.27.40",
    "@types/yeoman-generator": "^5.0.0",
    "@types/yeoman-test": "^4.0.1",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "copyfiles": "^2.4.1",
    "eslint": "^7.27.0",
    "eslint-plugin-import": "^2.23.3",
    "execa": "^5.0.0",
    "jest": "^27.0.1",
    "ts-jest": "^27.0.1",
    "typescript": "^4.3.2",
    "yeoman-environment": "^3.2.0",
    "yeoman-test": "^5.1.0"
  },
  "scripts": {
    "build": "rm -fr dist && tsc --project tsconfig.build.json && copyfiles --all --exclude '**/node_modules/**' 'generators/*/templates/**/*' dist && cp package.json README.md dist/",
    "lint": "eslint --ext ts generators utils",
    "test": "yarn test:utils && yarn test:generators",
    "test:generators": "jest --runInBand --testTimeout 120000 generators",
    "test:utils": "jest utils",
    "test:utils:coverage": "yarn test:utils --coverage --collectCoverageFrom 'utils/**/*'"
  }
}

{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "extends": [
        "@thetribe",
        "plugin:import/typescript"
    ],
    "env": {
        "node": true
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "@typescript-eslint/no-shadow": ["error"],
        "@typescript-eslint/no-unused-vars": ["error"],
        "class-methods-use-this": "off",
        "import/extensions": ["error", "ignorePackages", {
            "cjs": "never",
            "js": "never",
            "mjs": "never",
            "ts": "never"
        }],
        "no-shadow": "off",
        "no-unused-vars": "off"
    },
    "settings": {
        "import/extensions": [
            ".cjs",
            ".js",
            ".mjs",
            ".ts"
        ]
    }
}

version: '2.4'

services:
    <%= packageName %>-nginx:
        build: <%= packagePath %>/docker/nginx
        depends_on:
            - <%= packageName %>-php
        volumes_from:
            - <%= packageName %>-php

    <%= packageName %>-php:
        build:
            context: <%= packagePath %>/docker/php
            args:
                UID: ${UID:-1000}
        environment:
            DATABASE_URL: "postgresql://user:password@postgres/<%= packagePath.replace('-', '_') %>"
        depends_on:
            - postgres
        volumes:
            - ./<%= packagePath %>:/usr/src/project/<%= packagePath %>

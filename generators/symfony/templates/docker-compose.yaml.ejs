version: '2.4'

services:
    <%= packageName %>-nginx:
        build: <%= packagePath %>/docker/nginx
        depends_on:
            - <%= packageName %>-php
        volumes:
            - ./<%= packagePath %>/public:/usr/src/project/<%= packagePath %>/public

    <%= packageName %>-php:
        build:
            context: <%= packagePath %>/docker/php
            args:
                UID: ${uid:-1000}
        environment:
            APP_ENV: dev
            APP_SECRET: dev_secret
            DATABASE_URL: "postgresql://user:password@postgres/<%= packagePath.replace('-', '_') %>"
        depends_on:
            - postgres
        volumes:
            - ./<%= packagePath %>:/usr/src/project/<%= packagePath %>

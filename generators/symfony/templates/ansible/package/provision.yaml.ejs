- group:
    name: <%= packageName %>
    state: present
- user:
    name: <%= packageName %>
    state: present
    group: <%= packageName %>
    shell: /bin/bash
- import_role:
    name: envfile
  vars:
    owner: <%= packageName %>
    path: /home/<%= packageName %>/env
    env: '{{ <%= packageName %>_env }}'
- name: Configure env
  lineinfile:
    path: /home/<%= packageName %>/.bashrc
    line: set -a; source /home/<%= packageName %>/env; set +a
- import_role:
    name: php_fpm_pool
  vars:
    pool: <%= packageName %>
    version: '{{ <%= packageName.replace('-', '_') %>_php_version }}'
    user: <%= packageName %>
    group: <%= packageName %>
    env: '{{ <%= packageName.replace('-', '_') %>_env }}'
    extensions:
      - intl
      - mbstring
      - pgsql

version: 2.1

jobs:
  <%= packageName %>-build-assets:
    executor: node
    working_directory: ~/project/<%= packagePath %>
    steps:
      - checkout:
          path: ~/project
      - attach_workspace:
          at: ~/project
      - run: yarn build
      - persist_to_workspace:
          root: ~/project
          paths:
            - <%= packagePath %>/public/assets
            - <%= packagePath %>/var/manifest.json

  <%= packageName %>-lint-js:
    executor: node
    working_directory: ~/project/<%= packagePath %>
    steps:
      - checkout:
          path: ~/project
      - attach_workspace:
          at: ~/project
      - run: yarn lint:js

  <%= packageName %>-lint-scss:
    executor: node
    working_directory: ~/project/<%= packagePath %>
    steps:
      - checkout:
          path: ~/project
      - attach_workspace:
          at: ~/project
      - run: yarn lint:scss

  <%= packageName %>-lint-twig:
    executor: php
    working_directory: ~/project/<%= packagePath %>
    environment:
      APP_ENV: prod
    steps:
      - checkout:
          path: ~/project
      - attach_workspace:
          at: ~/project
      - run:
          name: Lint
          command: bin/console lint:twig templates

  <%= packageName %>-build:
    executor: php
    environment:
      APP_ENV: prod
    working_directory: ~/project/<%= packagePath %>
    steps:
      - checkout:
          path: ~/project
      - attach_workspace:
          at: ~/project
      - run: composer install --ignore-platform-reqs --no-scripts --no-dev --optimize-autoloader --classmap-authoritative
      - run: bin/console cache:warmup
      - run: bin/console assets:install
      - run:
          name: Create archive
          command: |
            tar -czf archive.tar.gz --owner=0 --group=0 \
              bin/console \
              config/bootstrap.php \
              config/bundles.php \
              migrations/ \
              public/ \
              src/ \
              templates/ \
              var/cache/prod/ \
              var/manifest.json \
              vendor/ \
      - store_artifacts:
          path: archive.tar.gz
          destination: <%= packageName %>.tar.gz

  <%= packageName %>-yarn-install:
    executor: node
    steps:
      - checkout
      - node/install-packages:
          app-dir: <%= packagePath %>
          include-branch-in-cache-key: false
          pkg-manager: yarn
      - persist_to_workspace:
          root: .
          paths:
            - <%= packagePath %>/node_modules

workflows:
  version: '2'
  build:
    jobs:
      - <%= packageName %>-build:
          requires:
            - <%= packageName %>-php-dependencies
            - <%= packageName %>-build-assets
      - <%= packageName %>-build-assets:
          requires:
            - <%= packageName %>-yarn-install
      - <%= packageName %>-lint-js:
          requires:
            - <%= packageName %>-yarn-install
      - <%= packageName %>-lint-scss:
          requires:
            - <%= packageName %>-yarn-install
      - <%= packageName %>-lint-twig:
          requires:
            - <%= packageName %>-php-dependencies
      - <%= packageName %>-yarn-install

services:
    <%= packageName %>-node:
        build:
            context: <%= packagePath %>/docker/node
            args:
                UID: ${uid:-1000}
        command: yarn dev-server --host 0.0.0.0 --public http://localhost<%= httpPath %> --client-web-socket-url ws://localhost<%= httpPath %>ws
        depends_on:
            - <%= packageName %>-nginx
        volumes:
            - ./<%= packagePath %>:/usr/src/project/<%= packagePath %>

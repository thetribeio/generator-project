version: '2.4'

services:
    <%= packageName %>-nginx:
        build: <%= packageName %>/docker/nginx
        depends_on:
            - <%= packageName %>-php
        volumes_from:
            - <%= packageName %>-php

    <%= packageName %>-node:
        build:
            context: <%= packageName %>/docker/node
            args:
                UID: ${UID:-1000}
        command: yarn start
        depends_on:
            - <%= packageName %>-nginx
        volumes_from:
            - <%= packageName %>-php
        ports:
            - 8080:8080

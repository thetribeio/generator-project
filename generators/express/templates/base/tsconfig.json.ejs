
{
    "extends": "@tsconfig/node<%= nodeVersion.split('.')[0] %>/tsconfig.json",
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "importHelpers": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "rootDir": ".",
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}

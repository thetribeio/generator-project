services:
    <%= packageName %>:
        build:
            context: <%= packagePath %>/docker
            args:
                UID: ${uid:-1000}
        volumes:
            - ./<%= packagePath %>:/usr/src/project/<%= packagePath %>
        environment:
            COOKIE_SECRET: development-secret
            DATABASE_URL: "postgresql://user:password@postgres/<%= packagePath.replace('-', '_') %>"

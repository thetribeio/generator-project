apiVersion: v1
kind: Secret
metadata:
  name: {{ include "<%= projectName %>.fullname" . }}-<%= packageName %>-migrate
  labels:
    app.kubernetes.io/component: <%= packageName %>
    {{- include "<%= projectName %>.labels" . | nindent 4 }}
  annotations:
    helm.sh/hook: pre-install,pre-upgrade
    helm.sh/hook-delete-policy: before-hook-creation,hook-succeeded
    helm.sh/hook-weight: '-1'
type: Opaque
stringData:
  url: postgresql://{{ .Values.<%= varify(packageName) %>.database.user }}:{{ .Values.<%= varify(packageName) %>.database.password | urlquery }}@{{ .Values.<%= varify(packageName) %>.database.host }}:{{ .Values.<%= varify(packageName) %>.database.port }}/{{ .Values.<%= varify(packageName) %>.database.name }}

- hosts: server
  tasks:
    - import_role:
        name: build
    - import_role:
        name: deploy
      vars:
        path: /home/<%= name %>
        artifact: <%= name %>.tar.gz
        environment: '{{ <%= name.replace('-', '_') %>.env }}'
  vars:
    job_name: <%= name %>-archive
    repository_name: <%= repositoryName %>
  vars_files:
    - vars/circleci.yaml
    - vars/github.yaml
  tags:
    - <%= name %>

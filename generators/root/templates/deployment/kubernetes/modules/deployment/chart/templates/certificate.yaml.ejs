{{ if not .Values.certificate }}
apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: {{ include "<%= projectName %>.fullname" . }}
spec:
  secretName: {{ include "<%= projectName %>.fullname" . }}-cert
  dnsNames:
    - {{ .Values.host }}
  issuerRef:
    name: letsencrypt
    kind: ClusterIssuer
{{ end }}

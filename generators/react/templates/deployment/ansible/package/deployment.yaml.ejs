---
- import_role:
    name: find_github_artifact
  vars:
    repository_name: <%= repositoryName %>
    workflow_name: <%= packageName %>
  delegate_to: localhost
  when: artifact_url is not defined
- import_role:
    name: deploy_artifact
  vars:
    path: /home/<%= packageName %>
    before_finalize:
      - >
        sed --in-place --expression='s#<div id="root"[^>]*>#<div id="root"
        {%- for key, value in <%= varName(packageName) %>_data|dictsort %} data-{{ key }}="{{ value }}"{% endfor -%}
        >#g' dist/index.html
